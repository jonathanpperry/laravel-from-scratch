
{
    "printWidth": 150,
    "sortHtmlAttributes": "code-guide",
    "sortTailwindcssClasses": true,
    "wrapAttributes": "aligned-multiple",
    "plugins": ["@shufo/prettier-plugin-blade"],
    "singleQuote": true,
    "overrides": [
        {
            "files": ["resources/views/{components,layouts,templates}/**/*.blade.php"],
            "options": {
                "tabWidth": 4,
                "parser": "blade"
            }
        }
    ]
}
